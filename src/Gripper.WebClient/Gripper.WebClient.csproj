<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<Authors>Tomáš Krupka</Authors>
		<Version>0.5.2-alpha</Version>
		<NeutralLanguage>en-GB</NeutralLanguage>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Description>
			Gripper.WebClient is a web scraping toolbox that operates in a browser window under its control, using the chrome devtools protocol (CDP). Gripper.WebClient provides a slim, web-scraping focused facade while retaining full access to the CDP API.
		</Description>
		<RepositoryUrl>https://github.com/tomaskrupka/Gripper</RepositoryUrl>
		<PackageTags></PackageTags>
		<PackageReleaseNotes>Just API, implementation in a separate package</PackageReleaseNotes>
		<Product>Gripper</Product>
		<PackageId>Gripper.WebClient</PackageId>
		<AssemblyName>Gripper.WebClient</AssemblyName>
		<RootNamespace>Gripper.WebClient</RootNamespace>
		<PackageProjectUrl>https://github.com/tomaskrupka/Gripper</PackageProjectUrl>
		<PackageIcon>icon_gripper.png</PackageIcon>
		<ApplicationIcon>icon_gripper.ico</ApplicationIcon>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
	</PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Events\**" />
	  <Compile Remove="Models\**" />
	  <EmbeddedResource Remove="Events\**" />
	  <EmbeddedResource Remove="Models\**" />
	  <None Remove="Events\**" />
	  <None Remove="Models\**" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="icon_gripper.ico" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\assets\icon_gripper.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>


	<ItemGroup>
	  <ProjectReference Include="..\Gripper.ChromeDevTools\Gripper.ChromeDevTools.csproj" />
	</ItemGroup>


	<Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)' == 'Debug'">
		<Exec Command="defaultdocumentation -a bin/Debug/net6.0/Gripper.WebClient.dll -x -o ../../docs/api" />
	</Target>

</Project>
